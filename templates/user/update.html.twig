{% extends 'base.html.twig' %}

{% block title %}
    Sortir.com | Modifier mon profil
{% endblock %}

{% block body %}

    {{ form_start(userForm) }}

    <div class="container-tight">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Modifier mon profil</h3>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    Pseudo :
                    {{ form_widget(userForm.username, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-2">
                    Nom :
                    {{ form_widget(userForm.lastname, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-2">
                    Prénom :
                    {{ form_widget(userForm.firstname, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-2">
                    Téléphone :
                    {{ form_widget(userForm.phone, {'attr': {'class': 'form-control'}}) }}

                </div>
                <div class="mb-2">
                    Email :
                    {{ form_widget(userForm.mail, {'attr': {'class': 'form-control'}}) }}

                </div>
                <div class="mb-2">
                    Campus :
                    {{ form_widget(userForm.college, {'attr': {'class': 'form-select'}}) }}

                </div>
                <div class="mb-2">
                    Photo de profil :
                    {{ form_widget(userForm.avatar, {'attr': {'class': 'form-control'}}) }}
                </div>

                <br />

                <button type="submit" class="btn btn-primary w-100">Enregistrer les modifications</button>

            </div>
        </div>

        {{ form_end(userForm) }}
{% endblock %}