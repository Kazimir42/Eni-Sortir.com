{% extends 'base.html.twig' %}

{% block title %}
    Sortir.com | Pannel admin
{% endblock %}

{% block body %}
    <div class="col-lg-12 mb-3" style="margin-bottom: 1em">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Rechercher par nom de lieu</h3>
            </div>
            <div class="card-body">

                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-10">
                        {{ form_widget(form.toSearch, {'attr': { 'class': 'form-control'}}) }}
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary text-center" style="width: 100%">Rechercher
                        </button>
                    </div>
                </div>
                {{ form_end(form) }}


            </div>

        </div>
    </div>

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Lieux</h3>
                <div class="col-auto ms-auto d-print-none">
                    <div class="btn-list">
                        <a href="{{ path('place_add') }}" class="btn btn-primary d-none d-sm-inline-block">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                            Ajouter un lieu
                        </a>
                    </div>
                </div>
            </div>
            <div class="table-responsive" style="min-height: 200px">
                <table class="table card-table table-vcenter text-nowrap datatable">
                    <thead>
                    <tr>
                        <th>Lieu</th>
                        <th>Rue</th>
                        <th>Longitude</th>
                        <th>Latitude</th>
                        <th>Ville</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for place in places %}

                        {% if place.name == 'Inconnue' %}

                        {% else %}
                        <tr>
                            <td>
                                {{ place.name }}
                            </td>
                            <td>
                                {{ place.street }}
                            </td>
                            <td>
                                {{ place.x }}
                            </td>
                            <td>
                                {{ place.y }}
                            </td>
                            <td>
                                {{ place.city.name }}
                            </td>
                            <td class="text-end">
                                <span class="dropdown">
                                  <button class="btn dropdown-toggle align-text-top" data-bs-boundary="viewport" data-bs-toggle="dropdown">Actions</button>
                                  <div class="dropdown-menu dropdown-menu-end">
                                    <a class="dropdown-item" href="{{ path('admin_place_edit', {'id': place.id}) }}">
                                        Modifier
                                    </a>
                                    <a class="dropdown-item" href="{{ path('admin_place_delete', {'id': place.id}) }}">
                                        Supprimer
                                    </a>

                                  </div>
                                </span>
                            </td>
                        </tr>
                        {% endif %}

                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>

    </div>

{% endblock %}