{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>Réinitialiser le mot de passe</h1>

    {{ form_start(requestForm) }}
    {{ form_row(requestForm.mail) }}
    <div>
        <small>
            Saisissez votre adresse mail et vous recevrez un lien pour réinitialiser le mot de passe.
        </small>
    </div>

    <button class="btn btn-primary">Envoyer l'email de réinitialisation</button>
    {{ form_end(requestForm) }}
{% endblock %}